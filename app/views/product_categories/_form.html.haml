  - if @product_category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product_category.errors.count, "error")} prohibited this product_category from being saved:"
      %ul
        - @product_category.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :ancestry
    = f.text_field :ancestry
